<script type="text/javascript">
function fticket()
{
 if(document.f1.from.value==""){
 window.alert ("Please select Departure Airport!");
 return false;}

 if(document.f1.dest.value==""){
 window.alert ("Please select Arrival Airport!");
 return false;}

 if(document.f1.dept.value==""){
 window.alert ("Please select Departure Date!");
 return false;}
 if(document.f1.return.value==""){
 window.alert ("Please select Return Date!");
 return false;}
var go=document.f1.from.value;
var come=document.f1.come.value;
var god=document.f1.dept.value;
var comd=document.f1.return.value;
window.alert("Congrats!!! you have booked ticket from
"+go+" To" + come +" which will depart on" +god);
}
</script>
